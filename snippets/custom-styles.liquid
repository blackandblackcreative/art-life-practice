/* Add your theme customizations below */






.hero--header-font{
  font-size: 70px !important;
}

@media only screen and (max-width: 768px) {
  .hero--header-font{
    font-size: 54px !important;
  }
  
}

.shopify-section{
  padding: 0 !important;
}

.product-page--form-container{
  max-width: 100% !important;

}

.product-form--root{
  max-width: 350px !important;
}

.product-form--price{
  font-size: 28px;
  border-bottom: 1px solid rgb(32, 84, 119);
  padding-bottom: 5px;
}

/* -----------CTA BUTTONS------------- */

.cta__button{
  background-color: #dee137 !important;
  max-width: 100% !important;
  display: inline-block !important;
  max-height: 100% !important;
  padding: 10px 68px !important;

}
.cta__button:hover{
  background-color: #e5e5e5 !important;
  border: 1px solid darkgreen !important;
}
.cta__button:active{
  background-color: #7B7D80 !important;
  color: white !important;
}

.cta__add-to-cart{
  background-color: #DEE137 !important;
  color: #fff !important;
  border: 1px solid #204C4B !important;
}


/*  ----- HEADER STYLING ----- */
.header--logo_middle{
  display: none;
}
.header--root{
  height: 85px !important;
}
@media only screen and (max-width: 768px) {
  .header--right-side{
    top: 15px;
  }
}
@media only screen and (min-width: 768px) {
  .header--logo_left{
    display: none !important;
  }
  .header--root{
    height: 120px !important;
  }
  
  .header--logo_middle{
    display: block;
    position: absolute;
    left: 47%;
    right: 50%;
    top: -80%;
  }
  
  .header--container{
    top: 30%;
  }
}
@media only screen and (min-width: 768px) {
  .x-menu--level-1--link > a{
    color: #fff !important;

  }

  .cart-link > a, .popup--open, .layout--login > a, .header--search > a{
    color: #fff !important;
  }
}





#shopify-section-collection{
  padding-top: 70px !important;
}

.template-page--heading{
  padding-bottom: 50px !important;
}