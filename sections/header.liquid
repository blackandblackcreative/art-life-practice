{% comment %} Translations {% endcomment %}
{% assign search_t = 'general.search.search' | t %}
{% assign cart_title_t = 'cart.title' | t %}

{% comment %} Variables {% endcomment %}
{% assign menu = section.settings.menu %}
{% assign logo = section.settings.logo %}
{% assign bg_color = section.settings.bg_color %}
{% assign logo_height = section.settings.logo-height-range %}
{% assign show_search = settings.search--show-in-header %}
{% assign cart_type = settings.cart--type %}

<header
  class="header--root"
  data-section-id="{{ section.id }}"
  data-section-type="header"
  data-js-class="Header"
  {% if logo %}
    {% if logo_height <= 45 %}
      data-header-logo-type="inline"
    {% else %}
      data-header-logo-type="overflowing"
    {% endif %}
  {% endif %}
  style="background-color: {{ bg_color }};"
>

  <noscript>
    <div class="header--container">
      <div class="header--left-side">
        {% if template == 'index' %}
          <h1 class="header--logo">
            {%
              render 'framework--logo',
              logo: logo,
              height_range: logo_height
            %}
          </h1>
        {% else %}
          <div class="header--logo">
            {%
              render 'framework--logo',
              logo: logo,
              height_range: logo_height
            %}
          </div>
        {% endif %}
        {%
          render 'framework--x-menu',
          js_class: 'XMenu',
          overlap_parent: 1,
          off_canvas: 'right-sidebar',
          handle: menu
        %}
      </div>
      <div class="header--right-side" data-item="nav-text">
        {% if show_search %}
          <div class="header--search">
            <a href="{{ routes.search_url }}">{{ search_t }}</a>
          </div>
        {% endif %}

        {% render 'layout--login' %}

        <div class="cart-link" data-item="nav-text">
          <a href="{{ routes.cart_url }}">{{ cart_title_t }}</a>
        </div>
      </div>
    </div>
  </noscript>

  <div class="header--y-menu-for-off-canvas">
    {% render 'framework--y-menu', handle: menu %}
  </div>

  <div class="header--container">
    <div class="header--left-side">

      {% if template == 'index' %}
        <h1 class="header--logo header--logo_left">
          {%
            render 'framework--logo',
            logo: logo,
            height_range: logo_height
          %}
        </h1>
      {% else %}
        <div class="header--logo header--logo_left">
          {%
            render 'framework--logo',
            logo: logo,
            height_range: logo_height
          %}
        </div>
      {% endif %}

      {%
        render 'framework--x-menu',
        js_class: 'XMenu',
        overlap_parent: 1,
        off_canvas: 'right-sidebar',
        handle: menu
      %}
    </div>

    <div class="header--logo header--logo_middle">
      {%
        render 'framework--logo',
        logo: logo,
        height_range: logo_height
      %}
    </div>

    <div class="header--right-side" data-item="nav-text">
      {% if show_search %}
        <div class="header--search">
          <a href="{{ routes.search_url }}">{{ search_t }}</a>
        </div>
      {% endif %}

      {% render 'layout--login' %}
      {% render 'partial--popup', component: 'link' %}

      <div class="cart-link">
        {% if cart_type == 'drawer' %}
          <div
            class="cart--open-right off-canvas--open"
            data-off-canvas--open="right-sidebar"
            data-off-canvas--view="cart"
            aria-haspopup=”menu”
          >
        {% endif %}

        <a tabindex="0" class="toggle" href="{{ routes.cart_url }}">
          {{ cart_title_t }}
          <span class="header--cart-number" data-item-count="{{ cart.item_count }}">
          (<span class="cart--external--total-items">{{ cart.item_count }}</span>)
          </span>
        </a>

        {% if cart_type == 'drawer' %}
          </div>
        {% endif %}
      </div>

      <a
        class="header--cart-count {% if cart_type == 'drawer' %}off-canvas--open{% endif %}"
        tabindex="0"
        href="{{ routes.cart_url }}"
        data-item="nav-text"
        data-off-canvas--open="right-sidebar"
        data-off-canvas--view="cart"
        aria-haspopup=”menu”
      >
        <span class="cart--external--total-items">
          {{ cart.item_count }}
        </span>
      </a>

      <div
        class="off-canvas--open"
        tabindex="0"
        data-off-canvas--open="left-sidebar"
        aria-haspopup=”menu”
      >
        {% render 'framework--icons', icon: 'menu' %}
      </div>
    </div>
  </div>

</header>

{% if logo %}
  {% assign offset = logo_height %}
  {% assign offset_small = logo_height %}

  {% if offset > 75 %}
    {% assign offset_small = 75 %}
  {% endif %}

  {% if offset > 45 %}
    {% assign offset = offset | plus: 20 %}
    {% assign offset_small = offset_small | plus: 15 %}
    {% assign offset = offset | plus: 30 %}
  {% else %}
    {% assign offset = 50 %}
    {% assign offset_small = 50 %}
    {% assign offset = offset | plus: 60 %}
  {% endif %}

  {% assign offset_small = offset_small | plus: 30 %}

  <style>
    header .fw--logo img {
      height: {{ logo_height }}px;
    }

    .layout--main-content {
      padding-top: {{ offset }}px;
    }

    @media only screen and (max-width: 767px) {
      .layout--main-content {
        padding-top: {{ offset_small }}px;
      }
    }
  </style>
{% endif %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "label": "Custom logo height",
      "id": "logo-height-range",
      "type": "range",
      "min": 15,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 35,
      "info": "This is referring to the natural height and should be half the height of the image you uploaded to ensure it stays sharp on retina screens."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}